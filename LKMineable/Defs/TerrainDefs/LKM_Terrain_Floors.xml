<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  

  <!-- ================= Metal Tiles ================= -->

  

  
  
  <TerrainDef ParentName="TileMetalBase">
    <defName>LKMFRTile</defName>
    <label>Forerunner metal tile</label>
    <renderPrecedence>241</renderPrecedence>
    <description>For a futuristic but royal look,Forerunner metal tiles fit perfectly into luxurious rooms. They are quick to clean and get a bonus to cleanliness.</description>
    <color>(130,130,190)</color>
    <statBases>
      <Beauty>11</Beauty>
      <WorkToBuild>1000</WorkToBuild>
      <Cleanliness>0.6</Cleanliness>
      <CleaningTimeFactor>0.6</CleaningTimeFactor>
    </statBases>
    <costList>
      <LKForerunner_MetalA>70</LKForerunner_MetalA>
    </costList>
    <designationHotKey>Misc2</designationHotKey>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <tags>
      <li>FineFloor</li>
    </tags>
  </TerrainDef>
  
  <TerrainDef ParentName="TileMetalBase">
    <defName>LKMUSTile</defName>
    <label>Uber Steel tile</label>
    <renderPrecedence>242</renderPrecedence>
    <description>For overbearing extravagance, nothing beats uber steel tiles. They are exceptionally expensive, and exceptionally beautiful, and people will think you're exceptionally snobbish if you actually live on them.</description>
    <color>(135,4,4)</color>
    <statBases>
      <Beauty>11</Beauty>
      <WorkToBuild>1000</WorkToBuild>
      <Cleanliness>0.6</Cleanliness>
      <CleaningTimeFactor>0.6</CleaningTimeFactor>
    </statBases>
    <costList>
      <LKUberSteelA>70</LKUberSteelA>
    </costList>
    <designationHotKey>Misc3</designationHotKey>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <tags>
      <li>FineFloor</li>
    </tags>
  </TerrainDef>
  
